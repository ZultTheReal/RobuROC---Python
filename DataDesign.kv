<DataScreen>:
    name: "datascreen"

    #canvas:
    #    Rectangle:
    #        pos: self.pos
    #        size: self.size
    #        source: "Back6.png"

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .05


            Label:
                font_size: 30
                text: "Data Overview"


        GridLayout:
            cols:2

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'

                canvas:
                    Color:
                        rgb: [1, 0, 0]
                    Rectangle:
                        pos: self.pos
                        size: self.size

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'

                canvas:
                    Color:
                        rgb: [0, 1, 0]
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .1

            RelativeLayout:

                StackLayout:
                    pos_hint: {'right': 1, 'top': 1}
                    orientation: 'lr-bt'

                    Button:
                        size_hint: .1,1
                        text: "Home"
                        on_release:
                            app.root.current = "main"
                            root.manager.transition.direction = "right"

                    Button:
                        pos_hint: {'left': 1, 'top': 1}
                        size_hint: .1,1
                        text: "PID Tuning"
                        on_release:
                            app.root.current = "pidscreen"
                            root.manager.transition.direction = "left"


                StackLayout:
                    pos_hint: {'right': 1, 'top': 1}
                    orientation: 'rl-bt'

                    Button:
                        size_hint: .25,1
                        text: "Start Periodic Messages"
                        on_release:
                            root.dataStarPeriodic()

                    Button:
                        size_hint: .25,1
                        text: "Stop Periodic Messages"
                        on_release:
                            root.dataStopPeriodic()