<PIDScreen>:
    name: "pidscreen"

    #canvas:
    #    Rectangle:
    #        pos: self.pos
    #        size: self.size
    #        source: "Back6.png"

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .05


            Label:
                font_size: 30
                text: "PID Tuning"

        GridLayout:
            cols:2
            size_hint: 1,1
            spacing: 25,50


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .1

            RelativeLayout:

                StackLayout:
                    pos_hint: {'right': 1, 'top': 1}
                    orientation: 'lr-bt'

                    Button:
                        size_hint: .125,1
                        text: "Back to Main"
                        on_release:
                            app.root.current = "main"
                            root.manager.transition.direction = "right"


                    Button:
                        pos_hint: {'left': 1, 'top': 1}
                        size_hint: .15,1
                        text: "Data Overview"
                        on_release:
                            app.root.current = "datascreen"
                            root.manager.transition.direction = "left"


                StackLayout:
                    pos_hint: {'right': 1, 'top': 1}
                    orientation: 'rl-bt'
